{
  "name": "vscode-ohm",
  "displayName": "Ohm Language",
  "description": "Unofficial ohm-js language support for vscode",
  "version": "0.1.0",
  "license": "MIT",
  "author": {
    "name": "Jerry wang",
    "email": "x.jerry.wang@gmail.com"
  },
  "repository": {
    "url": "https://github.com/0x-jerry/vscode-ohm"
  },
  "publisher": "fantasy",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "ohm",
    "ohm-js"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ohm",
        "aliases": [
          "Ohm",
          "ohm"
        ],
        "extensions": [
          ".ohm"
        ],
        "configuration": "./settings/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ohm",
        "scopeName": "source.ohm",
        "path": "./settings/ohm.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsup",
    "build": "tsup",
    "dev": "tsup --watch",
    "publish": "vsce publish --no-dependencies",
    "generate:ohm": "ohm generateBundles src/grammar/*.ohm -t -e",
    "release": "x-release --publish false"
  },
  "tsup": {
    "entry": [
      "src/extension.ts"
    ],
    "sourcemap": true,
    "clean": true,
    "external": [
      "vscode"
    ]
  },
  "devDependencies": {
    "@0x-jerry/x-release": "^2.0.0",
    "@ohm-js/cli": "^2.0.0",
    "@types/node": "^20.12.7",
    "@types/vscode": "^1.60.0",
    "@vscode/vsce": "^2.26.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "ohm-js": "^17.1.0"
  }
}